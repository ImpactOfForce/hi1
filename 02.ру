import math

print("Task 1")
def find_sqare(w, h):
    conv_val = 0.000022957
    SQFT_PER_ACRE = (w**2) * conv_val * (h**2) * conv_val
    return SQFT_PER_ACRE


width = int(input("Ведите ширину вашего участка в футах: "))
height = int(input("Ведите высоту вашего участка в футах: "))

print("Площадь в акрах равна:", find_sqare(width, height))

print("Task 2")
def find_velocity(vi,  d):
    a = 9.8
    return math.sqrt(vi**2)+2*a*d


param1 = int(input("Введите начальную скорость: "))
param2 = int(input("Введите дистанцию: "))
print("Скорость при соприкосновении объекта с землей = ", find_velocity(param1, param2))

print("Площадь в акрах равна:", find_sqare(width, height))

print("Task 3")
def get_days_in_month(month):
    year = {"январь": 31, "февраль": 28, "март": 31, "апрель": 30, "май": 31,
            "июнь": 30, "июль": 31, "август": 31, "сентябрь": 30, "октябрь": 31,
            "ноябрь": 30, "декабрь": 31}
    if month.lower() in year:
        return year[month.lower()]
    return "Такого месяца нет!!!"


m = input("Введите месяц: ")
print("В этом месяце:", get_days_in_month(m))
