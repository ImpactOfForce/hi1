def get_days_in_month(month):
    year = {"январь": 31, "февраль": 28, "март": 31, "апрель": 30, "май": 31,
            "июнь": 30, "июль": 31, "август": 31, "сентябрь": 30, "октябрь": 31,
            "ноябрь": 30, "декабрь": 31}
    if month.lower() in year:
        return year[month.lower()]
    return "Такого месяца нет!!!"


m = input("Введите месяц: ")
print("В этом месяце:", get_days_in_month(m))eight))
